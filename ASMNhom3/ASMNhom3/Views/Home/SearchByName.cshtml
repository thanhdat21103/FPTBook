@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
						<h2>Category</h2>
						<div class="panel-group category-products" id="accordian">
							<!--category-productsr-->
							@foreach (var cate in ViewBag.category)
							{
								if (cate.IsConfirm = true)
								{
									<div class="panel panel-default">
										<div class="panel-heading">
											<h4 class="panel-title"><a asp-action="SearchByCate" asp-controller="Home" asp-route-id="@cate.CategoryId">@cate.Name</a></h4>
										</div>
									</div>
								}

							}
						</div><!--/category-productsr-->
					</div>
				</div>

				<div class="col-sm-9 padding-right">
					<div class="features_items">
						<!--features_items-->
						<h2 class="title text-center">Features Items</h2>
						
						@if(ViewBag.book != null){
							@foreach (var item in ViewBag.book)
							{
								<div class="col-sm-4">
									<div class="product-image-wrapper">
										<div class="single-products">
											<div class="productinfo text-center">
												<img src="@item.Image" alt="" />
												<h2>@item.Title</h2>
												<p>@item.Price</p>
											</div>
											<div class="product-overlay">
												<div class="overlay-content">
													<h2>@item.Title</h2>
													<p>@item.Price</p>
													<a asp-action="BookDetail" asp-route-id="@item.BookID" asp-controller="Home" class="btn btn-default add-to-cart">
														<i class="fa fa-shopping-cart"></i>View details
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							}
						} else {
							<h1 class="title text-center">NOT FOUND</h1>
						}
					</div><!--features_items-->
				</div>
			</div>
		</div>
	</section>
</body>